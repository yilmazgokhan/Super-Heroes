<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_view_stats_info_left" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/color_2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="text_view_stats_value_left" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">28dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="text_view_stats_info_right" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/color_2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="text_view_stats_value_right" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">28dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="relative_stats" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_margin_small</item>
        <item name="android:layout_marginEnd">@dimen/default_margin_small</item>
        <item name="android:layout_marginStart">@dimen/default_margin_small</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="relative_stats_end" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default_margin_small</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--region common card view style-->
    <style name="common_card_view" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">@dimen/margin_card_item_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/margin_card_item_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/margin_card_item_vertical</item>
        <item name="cardElevation">@dimen/elevation_card</item>
    </style>
    <!--endregion-->

    <!--region card view item text & recyclerview's info-->
    <style name="item_card_view" parent="CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/default_margin_small</item>
        <item name="android:layout_marginEnd">@dimen/default_margin_small</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="cardCornerRadius">@dimen/item_corner_radius_card</item>
        <item name="cardElevation">@dimen/item_elevation_card</item>
    </style>
    <!--endregion-->

    <style name="button_default" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_default_style</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>